        <run_type>daily</run_type>
        <script><![CDATA[var now = new GlideDateTime();

// query open NeedIt task records that are past their due date
var overdue = new GlideRecord('x_58872_needit_needit_task');
overdue.addQuery('due_date','<=',now);
overdue.addQuery('state','!=',3); // 3=closed complete

overdue.query();
// log each overdue task
while (overdue.next()) {
	gs.info("Overdue NeedIt Task record = " + overdue.number);
	gs.eventQueue('x_58872_needit.overdueNeedItTask', overdue, overdue.number, gs.getUserName());
}]]></script>
